<% const {acttitle, actlead, actsub} = site.data.news; %>
<section class="page-section page-section-spacious bg-shade" id="Post">
    <div class='container-narrow text-center'>
  <h1 class="f0-light"><%= acttitle %></h1>
  <p class="lead">
    <% actlead.forEach(({text}) => { %><%= text %> <br> <% }) %>
  </p>

  <% actsub.forEach(({title, dir, alead, img, button}, index) => { %>
  <% if (dir == 'left') { %>
  <div class="d-flex flex-column flex-md-row my-5 pt-6">
    <div class='col-md-5 flex-md-self-center text-center'>
      <div class="app-frame py-4 px-6">
        <img width="249px" height="221px" src=<%= img %> >
      </div>
    </div>
    <div class='col-md-6 pl-md-5'>
      <h3 class="f2-light mt-1 mb-3"><%= title %></h3>
        <% alead.forEach(({text}) => { %><%= text %> <br> <% }) %>
      <br>
      <% button.forEach(({type, href, text}) => { %>
      <a class="btn-mktg btn-outline-mktg mr-2" href=<%= href %> target=_blank >
          <span class="octicon octicon-<%= type %> mr-1"></span>
          <span><%= text %></span>
      </a>
      <% }) %>
    </div>
  </div>
  <% } else { %>
  <div class="d-flex flex-column flex-md-row-reverse my-5 pt-6">
    <div class='col-xs-12 col-md-5'>
        <img class="mb-4 mb-lg-6" src=<%= img %> >
    </div>
    <div class='col-md-6 pr-md-5'>
      <h3 class="f2-light mt-1 mb-3"><%= title %></h3>
        <% alead.forEach(({text}) => { %><%= text %> <br> <% }) %>
        <br>
        <% button.forEach(({type, href, text}) => { %>
      <a class="btn-mktg btn-outline-mktg mr-2" href=<%= href %> target=_blank>
          <span class="octicon octicon-<%= type %> mr-1"></span>
          <span><%= text %></span>
      </a>
      <% }) %>
    </div>
  </div>
  <% } %>
  <% if (index != actsub.length-1) { %> <hr><% } %>
  <% }) %>
</div>
</section>